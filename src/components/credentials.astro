---
interface Credential {
    name: string
    detail?: string
    url?: string
    current?: boolean
}

const credentials: Credential[] = [
    {
        name: "RunPod",
        detail: "Community Engineer",
        url: "https://runpod.io",
        current: true
    },
    {
        name: "Lessgames",
        detail: "Co-Owner",
        url: "https://lessgames.com"
    },
    {
        name: "OfflineTV",
        url: "https://offlinetv.com"
    },
    {
        name: "Twitch Rivals",
        detail: "Masayoshi's Island",
        url: "https://schedule.twitchrivals.com/events/masayoshi-games-ft-minecraft-B04r1/overview"
    },
    {
        name: "Music Industry",
        detail: "Consulting"
    }
]
---

<section class="credentials">
    <ul class="credentials-list">
        {credentials.map((cred) => (
            <li class="credential">
                {cred.url ? (
                    <a href={cred.url} target="_blank" rel="noopener noreferrer" class="credential-link">
                        <span class="credential-name">{cred.name}</span>
                        {cred.detail && <span class="credential-detail">{cred.detail}</span>}
                        {cred.current && <span class="credential-status" title="Current role"><span class="status-dot"/></span>}
                    </a>
                ) : (
                    <span class="credential-link credential-link--static">
                        <span class="credential-name">{cred.name}</span>
                        {cred.detail && <span class="credential-detail">{cred.detail}</span>}
                    </span>
                )}
            </li>
        ))}
    </ul>
</section>

<style>
    .credentials {
        margin-top: 1.5rem;
        width: 100%;
        max-width: 700px;
    }
    
    .credentials-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
    }
    
    .credential-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.875rem;
        background: var(--bg-card);
        border-radius: 6px;
        transition: background-color 0.2s ease, transform 0.2s ease;
        text-decoration: none;
        color: var(--text);
        font-size: 1rem;
        white-space: nowrap;
    }
    
    .credential-link:hover {
        background: var(--bg-card-hover);
        transform: translateY(-1px);
        color: var(--text);
    }
    
    .credential-link--static {
        cursor: default;
    }
    
    .credential-link--static:hover {
        transform: none;
        background: var(--bg-card);
    }
    
    .credential-name {
        font-weight: 600;
    }
    
    .credential-detail {
        color: var(--text-muted);
    }
    
    .credential-status {
        display: flex;
        align-items: center;
    }
    
    .status-dot {
        width: 8px;
        height: 8px;
        background: #22c55e;
        border-radius: 50%;
        animation: pulse 4s ease-in-out infinite;
    }
    
    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.6; }
    }
</style>
