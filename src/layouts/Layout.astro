---
interface Props {
    title: string
}

const { title } = Astro.props
export const description = "Software Engineer - I help make dreams come true."
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />

        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="canonical" href={Astro.url} />

        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={`${Astro.url}/assets/logo.png`} />
        <!-- Other Favicons -->

        <!-- Stuff that asked to be in the head -->
        <link href="https://crunchy.social/@dejay" rel="me">
        <meta name="darkreader-lock" />
        <meta name="generator" content={Astro.generator} />
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    :root {
        --c-white: #efefef;
        --c-purple: #9777c2;
        --c-dpurple: #8a65ba;
    }

    ::-webkit-scrollbar {
        width: 12px;
        height: 12px;
    }

    ::selection,
    ::-webkit-scrollbar-corner,
    ::-webkit-scrollbar-track {
        background-color: transparent;
    }

    ::-webkit-scrollbar-thumb {
        background-color: var(--c-dpurple);
    }

    html,
    body {
        font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova",
            "Nimbus Sans", Arial, sans-serif;
        color: var(--c-white);
        background-color: var(--c-purple);
        scrollbar-color: var(--c-dpurple) black;
        scrollbar-width: thin;
    }

    a {
        color: var(--c-white);
    }
</style>
