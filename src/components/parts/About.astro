        </a>
    </div>
</div>

<div class="right">
    <figure>
        <img src="https://placehold.co/400x800.png"/>
        <figcaption>Lorem Ipsum or whatever</figcaption>
    </figure>
</div>

<script>
    const target: HTMLElement = document.querySelector(".age")! as HTMLElement
    var birthDate = new Date("2002-03-30"); 
    var currentDate: Date = new Date();
      
    var ageInMilliseconds = +currentDate - +birthDate;
    var ageInYears = ageInMilliseconds / (1000 * 60 * 60 * 24 * 365.25);
    target.innerHTML = ageInYears.toFixed(4);
    target.title = "As of " + currentDate.toLocaleString();
</script>

