---
import FullPageView from "../components/FullPageView.astro";
import LikeALittleHatsHeightView from "../components/LikeALittleHatsHeightView.astro";
import Footer from "../components/parts/Footer.astro";
import About from "../components/sections/About.astro";
import Welcome from "../components/sections/Welcome.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Dj I. // DeJayDev">
    <FullPageView class="welcome">
        <Welcome />
    </FullPageView>

    <FullPageView class="about">
        <About />
    </FullPageView>

    <LikeALittleHatsHeightView>
        <Footer/>
    </LikeALittleHatsHeightView>
</Layout>

<style is:global>
    .about {
        display: flex;
        flex-direction: row;
        min-height: 100vh !important;
        height: unset !important;
    }

    @media (max-width: 800px) {
        .about {
            flex-direction: column;
        }
    }

</style>
