---
import { Image } from "astro:assets";
import Socials from "./socials.astro";

const IMG_ALT = "test";
---

<div class="container">
    <div class="intro">
        <h1>
            Hi, I'm Dj
        </h1>

        <p>
            I make dreams come true :)
        </p>

        <Socials/>
    </div>

    <figure>
        <Image src="/dj.jpg" title={IMG_ALT} alt={IMG_ALT} height={4032} width={3024} />

        <figcaption>{IMG_ALT}</figcaption>
    </figure>
</div>

<style>
    .container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 1em;
    }

    img {
        object-fit: cover;
        height: 256px;
        width: 256px;
        border-radius: 16px;
    }

    figure {
        margin-right: 0;
    }

    figcaption {
        text-align: center;
    }
</style>