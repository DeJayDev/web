---
interface Props {
	title: string;
}

const { title } = Astro.props;

import '@fontsource-variable/grandstander';
import '../style/neat/neat.css'
import '../style/custom.css'

export const description = "Software Engineer - I help make dreams come true.";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />

        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="canonical" href={Astro.url} />

        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={`${Astro.url}/assets/logo.png`} />
        <!-- Other Favicons -->

        <!-- Stuff that asked to be in the head -->
        <link href="https://crunchy.social/@dejay" rel="me" />
        <meta name="darkreader-lock" />
        <meta name="generator" content={Astro.generator} />
    </head>
    <body>
        <slot />
    </body>
</html>
