<style>
    svg {
        height: 100%;
        width: 100%;
    }

    path {
        --end: 1.025;
        stroke-dasharray: var(--end);
        stroke-dashoffset: var(--end);
        animation: draw calc(var(--path-speed) * 1s) calc(var(--path-delay, 0) * 1s) ease-in forwards;
    }
    
    .dot {
        transform-box: fill-box;
        transform-origin: 50% 50%;
        fill: hsl(0 0% 0% / 0);
        animation: draw calc(var(--path-speed) * 1s) calc(var(--path-delay, 0) * 1s) ease-in forwards,
                   fill 0.5s calc(var(--human-delay) * 1s) forwards;
    }
    
    @keyframes fill {
      to {
        fill: hsl(0 0% 0% / 1);
      }
    }
    
    @keyframes draw {
      to {
        stroke-dashoffset: 0;
      }
    }
</style>

<script>
    const PATHS = document.querySelectorAll('path')
    const PX_PER_SEC = 620
    let DELAY = 0

    for (const PATH of PATHS) {
        const LEN = Math.ceil(PATH.getTotalLength())
        const SPEED = LEN / PX_PER_SEC
        PATH.setAttribute('pathLength', "1");
        PATH.style.setProperty('--path-speed', SPEED.toString())
        if (DELAY) PATH.style.setProperty('--path-delay', DELAY.toString())
        DELAY += SPEED
    }

    document.documentElement.style.setProperty('--human-delay', DELAY.toString())
</script>